<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nicebike.Views.ProductionDate"
             Title="ProductionDate">
    <StackLayout>
            <Label Text="New Production Date" FontSize="Title" HorizontalOptions="CenterAndExpand" Margin="0,20"/>
            
            <Entry x:Name="DateEntry" Text="{Binding DeliveryDate}" WidthRequest="300"/>

            <Button Text="Confirm" Clicked="ModifyClickedDate" HorizontalOptions="CenterAndExpand" Margin="0,20"/>
    </StackLayout>
</ContentPage>
