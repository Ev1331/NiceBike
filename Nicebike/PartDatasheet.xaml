<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nicebike.PartDatasheet"
             Title="PartDatasheet">
    <VerticalStackLayout>
        <TableView>
            <TableRoot>
                <TableSection>
                    <EntryCell x:Name="referenceEntry" Label="Reference:"
                       Placeholder="" />
                    <EntryCell x:Name="descriptionEntry" Label="Description:"
                       Placeholder="" />
                    <EntryCell x:Name="quantityEntry" Label="Quantity:"
                       Placeholder="" />
                    <EntryCell x:Name="thresholdEntry" Label="Alert threshold:"
                       Placeholder="" />
                    <EntryCell x:Name="supplierEntry" Label="Supplier:"
                       Placeholder="" />
                    <ViewCell>
                        <Button Text="Save"
                                Clicked="SavePart"/>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </VerticalStackLayout>
</ContentPage>