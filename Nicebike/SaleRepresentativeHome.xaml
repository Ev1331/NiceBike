<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nicebike.SaleRepresentativeHome"
             Title="SaleRepresentativeHome">
    <VerticalStackLayout
            Spacing="145"
            Padding="30,0"
            HorizontalOptions="Center"
            VerticalOptions="Center">


            <Button
                Text="Catalogue"
                HorizontalOptions="Center"
                WidthRequest = "500"
                HeightRequest="75"
                FontSize="20"/>

            <Button
                Text="Order"
                HorizontalOptions="Center"
                WidthRequest = "500"
                HeightRequest="75"
                FontSize="20"
                Clicked="NavigateToOrder"/>

            <Button
                Text="Stock Management"
                HorizontalOptions="Center" 
                WidthRequest = "500"
                HeightRequest="75"
                FontSize="20"
                Clicked="NavigateToStock"
                />

            

        </VerticalStackLayout>
</ContentPage>
